<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/save_button_bg"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:minWidth="0dp" />

    </LinearLayout>

    <!-- Edit Profile Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Edit Profile Text Header (below top app bar) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textSize="@dimen/text_size_header"
                android:textColor="#333333"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="24dp" />

            <!-- Profile Picture -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp">

                <RelativeLayout
                    android:id="@+id/profile_picture_container"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/profile_picture_bg">

                    <ImageView
                        android:id="@+id/profile_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_person_large"
                        android:scaleType="centerInside" />

                    <ImageView
                        android:id="@+id/edit_picture_button"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_camera"
                        android:background="@drawable/location_button_background"
                        android:padding="6dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:tint="@color/orange_primary" />

                </RelativeLayout>

            </RelativeLayout>

            <!-- Form Fields -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Name Fields Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="First Name"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/first_name_edit"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:hint="First Name"
                            android:background="@drawable/edittext_background"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textColorHint="#999999"
                            android:gravity="center_vertical"
                            android:scrollHorizontally="false"
                            android:scrollbars="none" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Name"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/last_name_edit"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:hint="Last Name"
                            android:background="@drawable/edittext_background"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textColorHint="#999999"
                            android:gravity="center_vertical"
                            android:scrollHorizontally="false"
                            android:scrollbars="none" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Mobile Number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/mobile_number_edit"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="09XXXXXXXXX"
                        android:background="@drawable/edittext_background"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textColorHint="#999999"
                        android:inputType="phone"
                        android:gravity="center_vertical"
                        android:scrollHorizontally="false"
                        android:scrollbars="none" />

                </LinearLayout>

                <!-- Province and City Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Province"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/province_edit"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:hint="Province"
                            android:background="@drawable/edittext_background"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textColorHint="#999999"
                            android:gravity="center_vertical"
                            android:scrollHorizontally="false"
                            android:scrollbars="none" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="City/Town"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/city_edit"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:hint="City/Town"
                            android:background="@drawable/edittext_background"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textColorHint="#999999"
                            android:gravity="center_vertical"
                            android:scrollHorizontally="false"
                            android:scrollbars="none" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Barangay -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Barangay"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <AutoCompleteTextView
                        android:id="@+id/barangay_edit"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Barangay"
                        android:background="@drawable/edittext_background"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textColorHint="#999999"
                        android:gravity="center_vertical"
                        android:scrollHorizontally="false"
                        android:scrollbars="none"
                        android:completionThreshold="1" />

                </LinearLayout>

                <!-- Street Address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Street Address"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etStreetAddress"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Street Address (Optional)"
                        android:background="@drawable/edittext_background"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textColorHint="#999999"
                        android:gravity="center_vertical"
                        android:scrollHorizontally="false"
                        android:scrollbars="none" />

                </LinearLayout>

                <!-- Birthday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Birthday"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/birthday_edit"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="MM/DD/YYYY"
                        android:background="@drawable/edittext_background"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textColorHint="#999999"
                        android:gravity="center_vertical"
                        android:scrollHorizontally="false"
                        android:scrollbars="none" />

                </LinearLayout>

                <!-- Gender and Civil Status Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <Spinner
                            android:id="@+id/gender_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/edittext_background"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Civil Status"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <Spinner
                            android:id="@+id/civil_status_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/edittext_background"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Religion and Blood Type Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Religion"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <Spinner
                            android:id="@+id/religion_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/edittext_background"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blood Type"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <Spinner
                            android:id="@+id/blood_type_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/edittext_background"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- PWD Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PWD Status"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/pwd_status_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/edittext_background"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp" />

                </LinearLayout>

                <!-- Valid ID Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Valid ID Label Row with Upload Text -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Valid ID"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/upload_valid_id_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload New ID"
                            android:textSize="14sp"
                            android:textColor="#f97316"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="8dp" />

                    </LinearLayout>

                    <!-- Valid ID Type Selection -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <Spinner
                            android:id="@+id/valid_id_type_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/edittext_background"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp" />

                    </LinearLayout>

                    <!-- Current Valid ID Image -->
                    <ImageView
                        android:id="@+id/valid_id_image"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/edittext_background"
                        android:contentDescription="Valid ID"
                        android:visibility="gone"
                        android:layout_marginBottom="8dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>