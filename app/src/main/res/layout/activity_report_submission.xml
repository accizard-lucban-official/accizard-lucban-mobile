<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Reports"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile"
            android:background="@null"
            android:padding="0dp"
            android:contentDescription="Profile"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <!-- Tab Navigation (Similar to X/Twitter) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="2dp">

        <!-- Submit Report Tab -->
        <LinearLayout
            android:id="@+id/submitReportTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit a Report"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF5722" />

            <!-- Active Tab Indicator -->
            <View
                android:id="@+id/submitReportIndicator"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/tab_indicator" />

        </LinearLayout>

        <!-- Report Log Tab -->
        <LinearLayout
            android:id="@+id/reportLogTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report Log"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#999999" />

            <!-- Inactive Tab Indicator -->
            <View
                android:id="@+id/reportLogIndicator"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent" />

        </LinearLayout>

    </LinearLayout>

    <!-- Content Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Submit Report Content -->
        <ScrollView
            android:id="@+id/submitReportContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:fadeScrollbars="true"
            android:scrollbarStyle="outsideOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Report Type Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report Type"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/reportTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/spinner_with_dropdown"
                    android:paddingEnd="40dp"
                    android:layout_marginBottom="16dp" />

                <!-- Description Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/descriptionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Provide additional details about the incident."
                    android:textColorHint="#999999"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="16dp"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:layout_marginBottom="16dp" />

                <!-- Location Information Section -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location Information"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />
                    
                    <ImageView
                        android:id="@+id/locationInfoIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_info"
                        android:contentDescription="Location Info"
                        android:clickable="true"
                        android:focusable="true"
                        android:tint="#666666" />
                        
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coordinates"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/coordinatesEditText"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:hint="Latitude, Longitude (e.g., 14.123456, 121.567890)"
                        android:textColorHint="#999999"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="16dp"
                        android:inputType="text"
                        android:gravity="center_vertical"
                        android:enabled="false" />

                    <ImageView
                        android:id="@+id/pinningButton"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/frame__8_"
                        android:background="@drawable/location_button_background"
                        android:padding="12dp"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Select Location on Map" />

                </LinearLayout>

                <!-- Get Current Location Button -->
                <Button
                    android:id="@+id/getCurrentLocationButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Get My Current Location"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_outline_background"
                    android:layout_marginBottom="16dp"
                    android:textAllCaps="false" />

                <!-- Legacy location field (hidden, for backward compatibility) -->
                <EditText
                    android:id="@+id/locationEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <!-- Media Attachments Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Media Attachments"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <!-- Professional Image Upload Container with Dashed Border -->
                <LinearLayout
                    android:id="@+id/mediaAttachmentsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/dashed_border_background"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp">

                    <!-- Instructional Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload photo or video evidence (Max 5MB image / 50MB video)"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp" />

                    <!-- Supported Formats Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Supported formats: JPG, PNG, MP4"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp" />

                    <!-- Action Buttons Container -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="2.2">

                        <!-- Take Photo Button - Slightly wider -->
                        <Button
                            android:id="@+id/takePhotoButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1.2"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/button_take_photo_background"
                            android:backgroundTint="@null"
                            android:text="Take Photo"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:drawableTint="@android:color/white"
                            android:drawablePadding="8dp"
                            android:gravity="center"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp" />

                        <!-- Upload File Button - Slightly narrower -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/uploadImagesButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1.0"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/button_upload_file_background"
                            app:backgroundTint="@null"
                            android:text="Upload File"
                            android:textColor="#FF5722"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:drawableTint="#FF5722"
                            android:drawablePadding="8dp"
                            android:gravity="center"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Image Gallery Grid (when images are present) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/imageGalleryRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp"
                    android:padding="8dp"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/professional_gallery_background" />

                <!-- Add More Images Button (when images exist) -->
                <Button
                    android:id="@+id/addMoreImagesButton"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="end"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/circle_add_button"
                    android:text="+"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:elevation="8dp" />

                <!-- Submit Button -->
                <Button
                    android:id="@+id/submitReportButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Submit Report"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/submit_button_background"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="0dp"/>

            </LinearLayout>

        </ScrollView>

        <!-- Report Log Content -->
        <ScrollView
            android:id="@+id/reportLogContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Stats Card Row: visible only in Report Log (Horizontally Scrollable with Separate White Boxes) -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginBottom="16dp"
                    android:paddingHorizontal="4dp">

                    <LinearLayout
                        android:id="@+id/statsContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <!-- Pending -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/white"
                            android:minWidth="90dp"
                            android:maxWidth="150dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:minWidth="90dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/frame"
                                    android:tint="#FF5722"
                                    android:layout_marginBottom="4dp"
                                    android:contentDescription="Pending Icon"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Pending"
                                    android:textSize="10sp"
                                    android:textColor="#666666"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:minHeight="14dp" />

                                <TextView
                                    android:id="@+id/pendingCountText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="#333333"
                                    android:layout_marginTop="4dp"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:ellipsize="end" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Ongoing -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/white"
                            android:minWidth="90dp"
                            android:maxWidth="150dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:minWidth="90dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/frame__1_"
                                    android:tint="#FF5722"
                                    android:layout_marginBottom="4dp"
                                    android:contentDescription="Ongoing Icon"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ongoing"
                                    android:textSize="10sp"
                                    android:textColor="#666666"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:minHeight="14dp" />

                                <TextView
                                    android:id="@+id/ongoingCountText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="#333333"
                                    android:layout_marginTop="4dp"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:ellipsize="end" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Responded -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/white"
                            android:minWidth="90dp"
                            android:maxWidth="150dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:minWidth="90dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/frame__2_"
                                    android:tint="#FF5722"
                                    android:layout_marginBottom="4dp"
                                    android:contentDescription="Responded Icon"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Responded"
                                    android:textSize="10sp"
                                    android:textColor="#666666"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:minHeight="14dp" />

                                <TextView
                                    android:id="@+id/respondedCountText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="#333333"
                                    android:layout_marginTop="4dp"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:ellipsize="end" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Unresponded -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/white"
                            android:minWidth="90dp"
                            android:maxWidth="150dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:minWidth="90dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/frame__3_"
                                    android:tint="#FF5722"
                                    android:layout_marginBottom="4dp"
                                    android:contentDescription="Unresponded Icon"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Unresponded"
                                    android:textSize="10sp"
                                    android:textColor="#666666"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:minHeight="14dp" />

                                <TextView
                                    android:id="@+id/unrespondedCountText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="#333333"
                                    android:layout_marginTop="4dp"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:ellipsize="end" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Redundant -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/white"
                            android:minWidth="90dp"
                            android:maxWidth="150dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:minWidth="90dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/frame__4_"
                                    android:tint="#FF5722"
                                    android:layout_marginBottom="4dp"
                                    android:contentDescription="Redundant Icon"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Redundant"
                                    android:textSize="10sp"
                                    android:textColor="#666666"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:minHeight="14dp" />

                                <TextView
                                    android:id="@+id/redundantCountText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="#333333"
                                    android:layout_marginTop="4dp"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:ellipsize="end" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Total -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/white"
                            android:minWidth="90dp"
                            android:maxWidth="150dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:minWidth="90dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/frame__5_"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"
                                    android:tint="#FF5722"
                                    android:layout_marginBottom="4dp"
                                    android:contentDescription="Total Icon" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Total"
                                    android:textSize="10sp"
                                    android:textColor="#666666"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:minHeight="14dp" />

                                <TextView
                                    android:id="@+id/totalCountText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="#333333"
                                    android:layout_marginTop="4dp"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:ellipsize="end" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Report Log Header with Filter -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Report Log"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <Spinner
                        android:id="@+id/reportLogFilterSpinner"
                        android:layout_width="140dp"
                        android:layout_height="36dp"
                        android:background="@drawable/spinner_with_dropdown"
                        android:paddingEnd="32dp" />
                </LinearLayout>

                <!-- RecyclerView for dynamic report list -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/reportLogRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <LinearLayout
            android:id="@+id/homeTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/frame__10_"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chatTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground">

            <!-- ✅ ADDED: FrameLayout to position badge over chat icon -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/chat_icon_report"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/frame__6_"/>

                <!-- ✅ ADDED: Chat notification badge -->
                <TextView
                    android:id="@+id/chat_badge_report"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/notification_badge"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:elevation="4dp"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reportTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_report_selected"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report"
                android:textColor="#FF5722"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mapTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/frame__8_"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/alertsTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/alerts_icon_report"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/frame__9_"/>

                <!-- Notification Badge - Positioned above the icon -->
                <TextView
                    android:id="@+id/alerts_badge_report"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/notification_badge"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:minWidth="20dp"
                    android:minHeight="20dp"
                    android:visibility="gone" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alerts"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>