<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color"
    android:fitsSystemWindows="true">

    <!-- Header Section with Image Background -->
    <FrameLayout
        android:id="@+id/header_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.20"
        app:layout_constraintHeight_min="140dp"
        app:layout_constraintWidth_percent="1.0">

        <!-- Background Image -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/header_background"
            android:scaleType="centerCrop"
            android:contentDescription="Header Background" />

        <!-- Header Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_xxlarge"
            android:layout_gravity="center">

            <!-- Logo Image -->
            <ImageView
                android:layout_width="@dimen/logo_size_large"
                android:layout_height="wrap_content"
                android:src="@drawable/accizard_logotype_svg"
                android:contentDescription="App Logo"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <!-- Header Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="REPORT PROTECT PREVENT"
                android:fontFamily="@font/dmsans"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_tiny"
                android:letterSpacing="0.1"
                android:textStyle="bold"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />
        </LinearLayout>

    </FrameLayout>

    <!-- Content Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rounded_top_background"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="32dp"
        android:paddingBottom="24dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_frame">

        <!-- Welcome Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/dmsans"
            android:text="Welcome Back"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_xxlarge"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:text="Sign in to continue"
            android:fontFamily="@font/dmsans"
            android:textColor="@color/medium_gray"
            android:textSize="@dimen/text_size_medium" />

        <!-- Email Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Email"
            android:fontFamily="@font/dmsans"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_medium" />

        <EditText
            android:id="@+id/email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height_large"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext_background"
            android:gravity="center_vertical"
            android:hint="Your@email.com"
            android:fontFamily="@font/dmsans"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="@dimen/padding_large"
            android:paddingVertical="@dimen/padding_small"
            android:scrollbars="none"
            android:scrollHorizontally="false"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/light_gray"
            android:textSize="@dimen/text_size_large" />

        <!-- Password Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Password"
            android:fontFamily="@font/dmsans"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height_large"
            android:layout_marginBottom="6dp">

            <EditText
                android:id="@+id/password_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_background"
                android:gravity="center_vertical"
                android:hint="Password"
                android:fontFamily="@font/dmsans"
                android:inputType="textPassword"
                android:paddingHorizontal="@dimen/padding_large"
                android:paddingVertical="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_xxlarge"
                android:scrollbars="none"
                android:scrollHorizontally="false"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/text_size_large" />

            <ImageView
                android:id="@+id/ivTogglePassword"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_medium"
                android:alpha="0.5"
                android:contentDescription="Toggle password visibility"
                android:src="@drawable/ic_eye_off" />

        </RelativeLayout>

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/forgot_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="8dp"
            android:text="Forgot Password?"
            android:fontFamily="@font/dmsans_semibold"
            android:fontWeight="600"
            android:textColor="@color/orange_primary"
            android:textSize="@dimen/text_size_medium" />

        <!-- Sign In Button -->
        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_medium"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:background="@drawable/button_background"
            android:text="Login"
            android:fontFamily="@font/dmsans"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <!-- Sign Up Link -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account? "
                android:fontFamily="@font/dmsans"
                android:textColor="@color/medium_gray"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/sign_up_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:fontFamily="@font/dmsans_semibold"
                android:fontWeight="600"
                android:textColor="@color/orange_primary"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>

        <!-- Emergency -->
        <TextView
            android:id="@+id/emergency_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="Emergency?"
            android:fontFamily="@font/dmsans"
            android:textColor="@color/medium_gray"
            android:textSize="@dimen/text_size_medium" />

        <!-- Call Lucban -->
        <LinearLayout
            android:id="@+id/call_lucban_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_medium"
            android:layout_marginBottom="0dp"
            android:background="@drawable/call_button_background"
            android:gravity="center_vertical|start"
            android:orientation="horizontal"
            android:paddingStart="@dimen/padding_medium"
            android:paddingEnd="@dimen/padding_medium">

            <ImageView
                android:id="@+id/phoneIconMain"
                android:layout_width="@dimen/icon_size_xlarge"
                android:layout_height="@dimen/icon_size_xlarge"
                android:src="@drawable/phone_call"
                android:tint="@color/orange_primary"
                android:scaleType="fitCenter"
                android:padding="@dimen/spacing_medium"
                android:contentDescription="Call Lucban LDRRMO" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/margin_small"
                android:fontFamily="@font/dmsans"
                android:text="Swipe right to Call Lucban LDRRMO"
                android:textColor="@color/medium_gray"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>