<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:background="@drawable/message_user_bg"
            android:orientation="vertical"
            android:padding="@dimen/chat_message_padding"
            android:maxWidth="@dimen/chat_bubble_max_width">

            <TextView
                android:id="@+id/messageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_large"
                android:text="Message text"/>

            <LinearLayout
                android:id="@+id/imageContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/messageImage"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_input_bg"
                    android:contentDescription="Chat image"
                    android:adjustViewBounds="true"
                    android:maxWidth="@dimen/chat_bubble_max_width"/>

                <VideoView
                    android:id="@+id/messageVideo"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_input_bg"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/messageAudioContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:background="@drawable/rounded_input_bg"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/audio"
                        android:tint="@android:color/white"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/messageAudioText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play Audio"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/timestampText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                android:textColor="#E0E0E0"
                android:textSize="@dimen/text_size_small"
                android:text="Today â€¢ 11:54 AM"/>
        </LinearLayout>

        <!-- User Profile Picture -->
        <ImageView
            android:id="@+id/userProfilePicture"
            android:layout_width="@dimen/profile_picture_medium"
            android:layout_height="@dimen/profile_picture_medium"
            android:src="@drawable/ic_person"
            android:layout_marginStart="@dimen/margin_small"
            android:scaleType="centerCrop"
            android:contentDescription="User Profile"/>
    </LinearLayout>
</LinearLayout>
