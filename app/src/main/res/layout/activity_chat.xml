<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height_medium"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="@dimen/card_elevation_medium"
        android:paddingHorizontal="@dimen/padding_xlarge"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/padding_tiny"
            android:layout_marginEnd="@dimen/margin_large"
            android:tint="#333333"
            android:tintMode="src_in"
            android:clickable="true"
            android:focusable="true"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lucban MDRRMO"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="@dimen/spacing_small"
                    android:layout_height="@dimen/spacing_small"
                    android:background="@drawable/green_dot"
                    android:layout_marginEnd="@dimen/margin_small"/>

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online"
                    android:textColor="#4CAF50"
                    android:textSize="@dimen/text_size_small"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/profileButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/phone_call"
            android:padding="@dimen/padding_small"
            android:tint="#f97316"
            android:tintMode="src_in"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- Messages Container -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        android:background="#FFFFFF"
        android:elevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/inputContainer"/>

    <!-- Input Container - Fixed at bottom above navigation (like messaging app) -->
    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium"
        android:paddingHorizontal="@dimen/padding_large"
        android:paddingBottom="@dimen/padding_medium"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHorizontal_bias="0.0">

        <ImageButton
            android:id="@+id/addActionButton"
            android:layout_width="@dimen/icon_size_xlarge"
            android:layout_height="@dimen/icon_size_xlarge"
            android:layout_marginEnd="@dimen/margin_medium"
            android:background="@drawable/add_button_rounded_background"
            android:clickable="true"
            android:contentDescription="Add Action"
            android:focusable="true"
            android:src="@drawable/ic_add"
            android:tint="@android:color/white"
            android:tintMode="src_in" />

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="@dimen/input_height_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="Type your message..."
            android:imeOptions="actionSend"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="4"
            android:paddingHorizontal="@dimen/padding_large"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="@dimen/text_size_large" />

        <ImageView
            android:id="@+id/sendButton"
            android:layout_width="@dimen/icon_size_xxlarge"
            android:layout_height="@dimen/icon_size_xxlarge"
            android:background="@drawable/professional_send_button"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/padding_medium"
            android:src="@drawable/vector__5_"
            android:tint="@android:color/white"
            android:tintMode="src_in" />
    </LinearLayout>

    <!-- Bottom Navigation Container (FrameLayout for floating button) -->
    <FrameLayout
        android:id="@+id/bottomNavigationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dashboard_bottom_nav_height"
        android:paddingBottom="0dp"
        android:background="#FFFFFF"
        android:elevation="12dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Bottom Navigation Bar -->
        <LinearLayout
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dashboard_bottom_nav_height"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:elevation="8dp"
            android:clipChildren="false">

            <!-- Home Tab -->
            <LinearLayout
                android:id="@+id/homeTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="@dimen/dashboard_bottom_nav_height"
                android:minWidth="0dp">

                <!-- Icon Container (consistent size for all tabs) -->
                <FrameLayout
                    android:layout_width="@dimen/dashboard_bottom_nav_icon_size"
                    android:layout_height="@dimen/dashboard_bottom_nav_icon_size"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="@dimen/dashboard_bottom_nav_icon_size"
                        android:layout_height="@dimen/dashboard_bottom_nav_icon_size"
                        android:layout_gravity="center"
                        android:src="@drawable/frame__10_"
                        android:tint="#999999"
                        android:tintMode="src_in"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="#999999"
                    android:textSize="@dimen/dashboard_bottom_nav_text_size"
                    android:layout_marginTop="@dimen/margin_xxsmall"/>
            </LinearLayout>

            <!-- Chat Tab -->
            <LinearLayout
                android:id="@+id/chatTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="@dimen/dashboard_bottom_nav_height"
                android:minWidth="0dp">

                <!-- Icon Container (consistent size for all tabs) -->
                <FrameLayout
                    android:layout_width="@dimen/dashboard_bottom_nav_icon_size"
                    android:layout_height="@dimen/dashboard_bottom_nav_icon_size"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="@dimen/dashboard_bottom_nav_icon_size"
                        android:layout_height="@dimen/dashboard_bottom_nav_icon_size"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_chat_selected"
                        android:tint="@color/orange_primary"
                        android:tintMode="src_in"/>

                    <!-- Chat notification badge -->
                    <TextView
                        android:id="@+id/chat_badge_chat"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="-2dp"
                        android:background="@drawable/notification_badge"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_tiny"
                        android:textStyle="bold"
                        android:minWidth="20dp"
                        android:minHeight="20dp"
                        android:visibility="gone" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textColor="#f97316"
                    android:textSize="@dimen/dashboard_bottom_nav_text_size"
                    android:layout_marginTop="@dimen/margin_xxsmall"/>
            </LinearLayout>

            <!-- Empty space for Report button (same weight as other tabs) -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:minHeight="@dimen/dashboard_bottom_nav_height"
                android:minWidth="0dp"/>

            <!-- Map Tab -->
            <LinearLayout
                android:id="@+id/mapTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="@dimen/dashboard_bottom_nav_height"
                android:minWidth="0dp">

                <!-- Icon Container (consistent size for all tabs) -->
                <FrameLayout
                    android:layout_width="@dimen/dashboard_bottom_nav_icon_size"
                    android:layout_height="@dimen/dashboard_bottom_nav_icon_size"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="@dimen/dashboard_bottom_nav_icon_size"
                        android:layout_height="@dimen/dashboard_bottom_nav_icon_size"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_map_selector"
                        android:contentDescription="Map Icon" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Map"
                    android:textColor="#999999"
                    android:textSize="@dimen/dashboard_bottom_nav_text_size"
                    android:layout_marginTop="@dimen/margin_xxsmall"/>
            </LinearLayout>

            <!-- Alerts Tab -->
            <LinearLayout
                android:id="@+id/alertsTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="@dimen/dashboard_bottom_nav_height"
                android:minWidth="0dp">

                <!-- Icon Container (consistent size for all tabs) -->
                <FrameLayout
                    android:layout_width="@dimen/dashboard_bottom_nav_icon_size"
                    android:layout_height="@dimen/dashboard_bottom_nav_icon_size"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/alerts_icon_chat"
                        android:layout_width="@dimen/dashboard_bottom_nav_icon_size"
                        android:layout_height="@dimen/dashboard_bottom_nav_icon_size"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_alerts_selector"
                        android:contentDescription="Alerts Icon" />

                    <!-- Notification Badge - Positioned above the icon -->
                    <TextView
                        android:id="@+id/alerts_badge_chat"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="-2dp"
                        android:background="@drawable/notification_badge"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_tiny"
                        android:textStyle="bold"
                        android:minWidth="20dp"
                        android:minHeight="20dp"
                        android:visibility="gone" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alerts"
                    android:textColor="#999999"
                    android:textSize="@dimen/dashboard_bottom_nav_text_size"
                    android:layout_marginTop="@dimen/margin_xxsmall"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Floating Circular Report Button (overlaps navigation bar) -->
        <FrameLayout
            android:id="@+id/reportTab"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="-20dp"
            android:elevation="19dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/report_tab_circular_selector"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:clipToOutline="false"
            android:outlineProvider="none">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/emergencyreporticon" />
        </FrameLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>