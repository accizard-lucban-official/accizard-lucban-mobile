<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height_medium"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="@dimen/card_elevation_medium"
        android:paddingHorizontal="@dimen/padding_xlarge"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/padding_tiny"
            android:layout_marginEnd="@dimen/margin_large"
            android:clickable="true"
            android:focusable="true"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lucban LDRRMO"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="@dimen/spacing_small"
                    android:layout_height="@dimen/spacing_small"
                    android:background="@drawable/green_dot"
                    android:layout_marginEnd="@dimen/margin_small"/>

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online"
                    android:textColor="#4CAF50"
                    android:textSize="@dimen/text_size_small"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/profileButton"
            android:layout_width="@dimen/icon_size_xlarge"
            android:layout_height="@dimen/icon_size_xlarge"
            android:src="@drawable/phone_call"
            android:padding="@dimen/padding_small"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- Logo Section as Background -->
    <LinearLayout
        android:id="@+id/logoSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:background="#F8F9FA"
        android:alpha="0.3"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/inputContainer">

        <ImageView
            android:layout_width="@dimen/logo_size_medium"
            android:layout_height="@dimen/logo_size_medium"
            android:src="@drawable/accizard_logo_svg"
            android:contentDescription="Accizard Logo"
            android:alpha="0.3"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACCIZARD LUCBAN"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_medium"
            android:letterSpacing="0.1"
            android:alpha="0.3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Support Hours"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:alpha="0.3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Office: 8:00 AM - 5:00 PM"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:alpha="0.3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency: 24/7"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginTop="1dp"
            android:alpha="0.3"/>
    </LinearLayout>

    <!-- Messages Container - Overlays on top of logo section -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="200dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="200dp"
        android:clipToPadding="false"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/inputContainer"
        app:layout_constraintHeight_default="wrap"/>

    <!-- Input Container -->

    <!-- Bottom Navigation -->

    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_small"
        android:elevation="@dimen/card_elevation_large"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium"
        android:paddingHorizontal="@dimen/padding_large"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/addActionButton"
            android:layout_width="@dimen/icon_size_xlarge"
            android:layout_height="@dimen/icon_size_xlarge"
            android:layout_marginEnd="@dimen/margin_medium"
            android:background="@drawable/orange_ripple_background"
            android:clickable="true"
            android:contentDescription="Add Action"
            android:focusable="true"
            android:src="@drawable/ic_add"
            android:tint="@android:color/white" />

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="@dimen/input_height_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="Type your message..."
            android:imeOptions="actionSend"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="4"
            android:paddingHorizontal="@dimen/padding_large"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="@dimen/text_size_large" />

        <ImageView
            android:id="@+id/sendButton"
            android:layout_width="@dimen/icon_size_xxlarge"
            android:layout_height="@dimen/icon_size_xxlarge"
            android:background="@drawable/professional_send_button"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/padding_medium"
            android:src="@drawable/vector__5_" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/homeTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/frame__10_"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chatTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chat_selected"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textColor="#FF5722"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reportTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/iconoir__reports_solid"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mapTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/frame__8_"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/alertsTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:id="@+id/alerts_icon_chat"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/frame__9_"/>

                <!-- Notification Badge - Positioned above the icon -->
                <TextView
                    android:id="@+id/alerts_badge_chat"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/notification_badge"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:minWidth="20dp"
                    android:minHeight="20dp"
                    android:visibility="gone" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alerts"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>