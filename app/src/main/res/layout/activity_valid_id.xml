<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color"
    android:fitsSystemWindows="true">

    <!-- Header Section with Image Background -->
    <FrameLayout
        android:id="@+id/header_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="1.0">

        <!-- Background Image -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/header_background"
            android:scaleType="centerCrop"
            android:contentDescription="Header Background" />

        <!-- Header Content -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_xxlarge">

            <!-- Logo Image - Top Left -->
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="140dp"
                android:layout_height="62dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:contentDescription="App Logo"
                android:src="@drawable/accizard_logotype_logomark_svg"
                android:adjustViewBounds="true"
                android:scaleType="fitStart" />

            <!-- Header Text - Aligned with Logo Left -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:gravity="start">

                <TextView
                    android:id="@+id/tvHeaderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome, New User!"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvHeaderSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign up to continue"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

    <!-- Form Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rounded_top_background"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_frame"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="32dp"
            android:paddingBottom="@dimen/registration_form_padding_vertical">

            <!-- Progress Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete Your Profile"
                android:fontFamily="@font/dmsans"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 4 of 4: Valid ID"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/text_size_medium"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/registration_step_margin_bottom" />

            <!-- Progress Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/spacing_xxxlarge">

                <TextView
                    android:layout_width="@dimen/registration_step_circle_size"
                    android:layout_height="@dimen/registration_step_circle_size"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/step_completed_background"
                    android:gravity="center"
                    android:textSize="@dimen/registration_step_text_size" />

                <View
                    android:layout_width="@dimen/registration_step_line_width"
                    android:layout_height="@dimen/registration_step_line_height"
                    android:background="@color/orange_primary"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="@dimen/registration_step_circle_size"
                    android:layout_height="@dimen/registration_step_circle_size"
                    android:text="2"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/step_completed_background"
                    android:gravity="center"
                    android:textSize="@dimen/registration_step_text_size" />

                <View
                    android:layout_width="@dimen/registration_step_line_width"
                    android:layout_height="@dimen/registration_step_line_height"
                    android:background="@color/orange_primary"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="@dimen/registration_step_circle_size"
                    android:layout_height="@dimen/registration_step_circle_size"
                    android:text="3"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/step_completed_background"
                    android:gravity="center"
                    android:textSize="@dimen/registration_step_text_size" />

                <View
                    android:layout_width="@dimen/registration_step_line_width"
                    android:layout_height="@dimen/registration_step_line_height"
                    android:background="@color/orange_primary"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="@dimen/registration_step_circle_size"
                    android:layout_height="@dimen/registration_step_circle_size"
                    android:text="4"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/step_active_background"
                    android:gravity="center"
                    android:textSize="@dimen/registration_step_text_size" />

            </LinearLayout>

            <!-- Upload Valid ID Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Valid ID"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/registration_label_text_size"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/registration_label_margin_bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload a clear photo of your valid government-issued ID for verification"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/registration_label_text_size"
                android:layout_marginBottom="@dimen/margin_medium" />

            <!-- Image Upload Area with Placeholder -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="@dimen/margin_medium">

                <!-- Placeholder Container (shown when no image) -->
                <LinearLayout
                    android:id="@+id/placeholder_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/dashed_border_background"
                    android:gravity="center"
                    android:padding="@dimen/margin_large">

                    <!-- Person Icon above -->
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/vector__4_"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:contentDescription="Upload Icon"
                        android:alpha="0.5" />

                    <!-- Camera Icon and "Take a Photo" text side by side -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_camera"
                            android:layout_marginEnd="@dimen/margin_tiny"
                            android:contentDescription="Camera Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Take a Photo"
                            android:textColor="@color/text_hint"
                            android:textSize="@dimen/text_size_medium" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Selected ID Preview (shown when image is selected) -->
                <ImageView
                    android:id="@+id/iv_valid_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dashed_border_background"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:contentDescription="Selected Valid ID" />

            </FrameLayout>

            <!-- Upload Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_upload"
                android:layout_width="match_parent"
                android:layout_height="@dimen/registration_button_height"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/back_button_background">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_gallery"
                        android:tint="@color/text_hint"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Gallery Icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload ID Image"
                        android:textColor="@color/text_hint"
                        android:textSize="@dimen/registration_button_text_size" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- See list of Valid IDs Link -->
            <TextView
                android:id="@+id/tv_valid_ids_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See list of Valid IDs"
                android:textColor="@color/orange_primary"
                android:textSize="@dimen/text_size_medium"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/margin_small"
                android:layout_marginBottom="@dimen/spacing_xxxlarge" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="@dimen/registration_back_button_size"
                    android:layout_height="@dimen/registration_back_button_size"
                    android:background="@drawable/back_button_background"
                    android:src="@drawable/ic_chevron_back_gray"
                    android:scaleType="fitCenter"
                    android:contentDescription="Back" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="120dp"
                    android:layout_height="@dimen/registration_button_height"
                    android:text="Next"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/registration_button_text_size"
                    android:textStyle="bold"
                    android:enabled="false" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
