<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="2dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@drawable/professional_image_background" />

    <!-- Professional Remove Button -->
    <ImageView
        android:id="@+id/removeButton"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="top|end"
        android:layout_margin="6dp"
        android:src="@drawable/ic_close_white"
        android:background="@drawable/circle_remove_button"
        android:padding="6dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Remove image"
        android:elevation="4dp" />

    <!-- Image Count Badge -->
    <TextView
        android:id="@+id/imageCountText"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="6dp"
        android:background="@drawable/circle_count_badge"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="gone"
        android:contentDescription="Image count"
        android:elevation="4dp" />

    <!-- Professional Overlay for better visibility -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/image_overlay_gradient"
        android:alpha="0.1" />

</FrameLayout>
