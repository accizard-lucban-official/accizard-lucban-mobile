<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_xxlarge"
        android:background="@android:color/white">

        <!-- Header with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_xlarge">

            <ImageView
                android:id="@+id/ivAnnouncementIcon"
                android:layout_width="@dimen/icon_size_large"
                android:layout_height="@dimen/icon_size_large"
                android:src="@drawable/ic_megaphone"
                android:tint="#f97316"
                android:layout_marginEnd="@dimen/spacing_medium" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Announcement Details"
                android:textSize="@dimen/text_size_xxlarge"
                android:textStyle="bold"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- Announcement Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="@dimen/text_size_small"
            android:textColor="#666666"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_tiny" />

        <TextView
            android:id="@+id/tvPreviewType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Announcement Type"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="bold"
            android:textColor="#333333"
            android:padding="@dimen/spacing_medium"
            android:background="#F5F5F5"
            android:layout_marginBottom="@dimen/padding_large" />

        <!-- Priority -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority"
            android:textSize="@dimen/text_size_small"
            android:textColor="#666666"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_tiny" />

        <TextView
            android:id="@+id/tvPreviewPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:background="@drawable/medium_priority_bg"
            android:padding="@dimen/margin_xxsmall"
            android:paddingStart="@dimen/spacing_medium"
            android:paddingEnd="@dimen/spacing_medium"
            android:layout_marginBottom="@dimen/padding_large" />

        <!-- Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date &amp; Time"
            android:textSize="@dimen/text_size_small"
            android:textColor="#666666"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_tiny" />

        <TextView
            android:id="@+id/tvPreviewDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="@dimen/text_size_medium"
            android:textColor="#333333"
            android:padding="@dimen/spacing_medium"
            android:background="#F5F5F5"
            android:layout_marginBottom="@dimen/padding_large" />

        <!-- Message/Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textSize="@dimen/text_size_small"
            android:textColor="#666666"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_tiny" />

        <TextView
            android:id="@+id/tvPreviewMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Announcement message details..."
            android:textSize="@dimen/text_size_medium"
            android:textColor="#333333"
            android:padding="@dimen/spacing_medium"
            android:background="#F5F5F5"
            android:minHeight="80dp"
            android:lineSpacingExtra="@dimen/spacing_tiny"
            android:layout_marginBottom="@dimen/padding_large"
            android:linksClickable="true"
            android:autoLink="web|email" />

        <!-- Announcement Image -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:id="@+id/imageContainer">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            
            <ImageView
                android:id="@+id/ivAnnouncementImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dialog_image_min_height"
                android:maxHeight="@dimen/dialog_image_max_height"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:background="#F5F5F5"
                android:contentDescription="Announcement image"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Priority Indicator Box -->
        <LinearLayout
            android:id="@+id/priorityIndicatorBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFF3E0"
            android:padding="@dimen/spacing_medium"
            android:layout_marginBottom="@dimen/margin_xlarge"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/icon_size_small"
                android:layout_height="@dimen/icon_size_small"
                android:src="@drawable/ic_info"
                android:tint="#f97316"
                android:layout_marginEnd="@dimen/margin_tiny" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Please take appropriate action based on the priority level of this announcement."
                android:textSize="@dimen/text_size_small"
                android:textColor="#E65100"
                android:lineSpacingExtra="@dimen/spacing_tiny" />
        </LinearLayout>

        <!-- Close Button -->
        <Button
            android:id="@+id/btnClosePreview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_medium"
            android:text="Close"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:background="@drawable/button_take_photo_background"
            android:backgroundTint="@null" />

    </LinearLayout>

</ScrollView>
