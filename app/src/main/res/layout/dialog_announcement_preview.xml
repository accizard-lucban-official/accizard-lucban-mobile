<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@android:color/white">

        <!-- Header with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/ivAnnouncementIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_megaphone"
                android:tint="#FF5722"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Announcement Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- Announcement Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="12sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvPreviewType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Announcement Type"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="16dp" />

        <!-- Priority -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority"
            android:textSize="12sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvPreviewPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:background="@drawable/medium_priority_bg"
            android:padding="6dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date &amp; Time"
            android:textSize="12sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvPreviewDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="14sp"
            android:textColor="#333333"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="16dp" />

        <!-- Message/Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textSize="12sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvPreviewMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Announcement message details..."
            android:textSize="14sp"
            android:textColor="#333333"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:minHeight="80dp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"
            android:linksClickable="true"
            android:autoLink="web|email" />

        <!-- Announcement Image -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:id="@+id/imageContainer">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            
            <ImageView
                android:id="@+id/ivAnnouncementImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:background="#F5F5F5"
                android:contentDescription="Announcement image"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Priority Indicator Box -->
        <LinearLayout
            android:id="@+id/priorityIndicatorBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFF3E0"
            android:padding="12dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_info"
                android:tint="#FF5722"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Please take appropriate action based on the priority level of this announcement."
                android:textSize="12sp"
                android:textColor="#E65100"
                android:lineSpacingExtra="2dp" />
        </LinearLayout>

        <!-- Close Button -->
        <Button
            android:id="@+id/btnClosePreview"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Close"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/button_take_photo_background"
            android:backgroundTint="@null" />

    </LinearLayout>

</ScrollView>
