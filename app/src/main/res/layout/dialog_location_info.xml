<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header with Title -->


    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location Information"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvLocationInfoMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Lucban MDRRMO responds exclusively to geotagged reports within Lucban. However, reports from outside the area may still be submitted."
            android:textSize="16sp"
            android:textColor="#555555"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnCloseLocationInfo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Okay"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/submit_button_background" />

    </LinearLayout>

</LinearLayout>
