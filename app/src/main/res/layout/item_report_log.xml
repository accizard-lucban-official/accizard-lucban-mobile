<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/report_item_background"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:elevation="1dp"
    android:clickable="false"
    android:focusable="false">

    <!-- Report Type and Status Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/reportTypeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Report Type"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="12sp"
            android:background="@drawable/status_pending_bg"
            android:padding="6dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

    </LinearLayout>

    <!-- Location Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_location"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="14sp"
            android:textColor="#666666" />

    </LinearLayout>

    <!-- Description -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <!-- Attachments Container -->
    <LinearLayout
        android:id="@+id/attachmentsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/attachmentIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_attachment"
            android:layout_marginEnd="8dp"
            android:tint="#FF5722"
            android:visibility="gone" />

        <TextView
            android:id="@+id/viewAttachmentsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Attachments"
            android:textSize="14sp"
            android:textColor="#FF5722"
            android:textStyle="bold"
            android:background="?android:attr/selectableItemBackground"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Timestamp Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/timeIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_time"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/timestampText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timestamp"
            android:textSize="14sp"
            android:textColor="#666666" />

    </LinearLayout>

</LinearLayout>
