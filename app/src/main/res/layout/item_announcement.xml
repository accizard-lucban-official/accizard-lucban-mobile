<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="@dimen/padding_large"
    android:clickable="false"
    android:focusable="false">

    <!-- Title and Priority Badge Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_medium">

        <!-- Title (Announcement Type) -->
        <TextView
            android:id="@+id/tvAnnouncementType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Weather Warning"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:textColor="#333333"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Priority Badge (oval with dot) -->
        <LinearLayout
            android:id="@+id/priorityBadgeContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/high_priority_bg"
            android:paddingStart="@dimen/padding_medium"
            android:paddingEnd="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_small"
            android:layout_marginStart="@dimen/margin_tiny">

            <!-- Priority Dot -->
            <View
                android:id="@+id/priorityDot"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/priority_dot_high"
                android:layout_marginEnd="6dp" />

            <!-- Priority Text -->
            <TextView
                android:id="@+id/tvAnnouncementPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="High"
            android:textSize="@dimen/text_size_small"
            android:textColor="#E53935" />

        </LinearLayout>

    </LinearLayout>

    <!-- Description/Message -->
    <TextView
        android:id="@+id/tvAnnouncementMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description of the announcement goes here..."
        android:textSize="@dimen/text_size_medium"
        android:textColor="#666666"
        android:lineSpacingExtra="@dimen/spacing_tiny"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:linksClickable="true"
        android:autoLink="web|email" />

    <!-- Timestamp and Attachments Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_small">

        <!-- Clock Icon -->
        <ImageView
            android:id="@+id/timeIcon"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:src="@drawable/ic_time"
            android:tint="#999999"
            android:layout_marginEnd="@dimen/margin_xxsmall" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/tvAnnouncementDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Jul 15, 2023"
            android:textSize="@dimen/text_size_small"
            android:textColor="#999999" />

        <!-- View Attachments Link (shown only if attachment exists) -->
        <TextView
            android:id="@+id/tvViewAttachments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Attachments"
            android:textSize="@dimen/text_size_small"
            android:textColor="#FF5722"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            android:paddingStart="@dimen/padding_small"
            android:paddingEnd="@dimen/padding_small"
            android:paddingTop="@dimen/padding_tiny"
            android:paddingBottom="@dimen/padding_tiny"
            android:background="?android:attr/selectableItemBackground" />

    </LinearLayout>

</LinearLayout>
